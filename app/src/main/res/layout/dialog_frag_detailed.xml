<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/dfd_niv_album"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/dfd_tv_time"
        android:layout_alignBottom="@+id/dfd_niv_album"
        android:layout_toRightOf="@+id/dfd_niv_album"
        android:layout_marginLeft="15dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/artist_tv_doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dfd_niv_album"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:text="Artist:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/dfd_tv_artist"
        android:layout_marginTop="5dp"
        android:background="@color/transparent_black_hex_66" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/dfd_niv_album"
        android:background="@color/transparent_black_hex_66" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/dfd_tv_track"
        android:background="@color/transparent_black_hex_66" />

    <TextView
        android:id="@+id/track_tv_doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dfd_tv_artist"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:text="Track:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/dfd_tv_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/artist_tv_doc"
        android:layout_toRightOf="@+id/artist_tv_doc"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/dfd_tv_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/track_tv_doc"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/track_tv_doc"
        android:layout_toRightOf="@+id/track_tv_doc"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageButton
        android:layout_margin="5dp"
        android:id="@+id/dfd_ib_play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/playbtn"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:layout_margin="5dp"
        android:id="@+id/dfd_ib_down"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/downloadbtn"
        android:background="@null"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:id="@+id/dfd_ib_share"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/sharebtn"
        android:background="@null"
        android:layout_alignLeft="@+id/dfd_ib_play"
        android:layout_below="@+id/dfd_ib_play" />

    <ProgressBar
        android:id="@+id/dfd_pb"
        android:layout_margin="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

</RelativeLayout>