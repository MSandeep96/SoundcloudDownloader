<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">


        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/artwork_iv_li"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:id="@+id/artistn_tv_li"
            android:layout_alignTop="@+id/artwork_iv_li"
            android:layout_toRightOf="@+id/artwork_iv_li"
            android:layout_toEndOf="@+id/artwork_iv_li" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="17sp"
            android:id="@+id/title_tv_li"
            android:layout_below="@+id/artistn_tv_li"
            android:layout_toRightOf="@+id/artwork_iv_li"
            android:layout_toEndOf="@+id/artwork_iv_li"
            android:layout_toLeftOf="@+id/play_ib_li"
            android:layout_toStartOf="@+id/play_ib_li"
            android:maxLines="3"
            android:ellipsize="end"/>

        <ImageButton
            android:visibility="gone"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:tint="@color/grey_hex_66"
            android:id="@+id/downbtn_ib_li"
            android:scaleType="fitXY"
            android:background="@null"
            android:src="@drawable/download"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="3:03"
            android:id="@+id/time_tv_li"
            android:layout_alignBottom="@+id/artwork_iv_li"
            android:layout_toRightOf="@+id/artwork_iv_li"
            android:layout_toEndOf="@+id/artwork_iv_li"
            />

        <ImageButton
            android:visibility="gone"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@null"
            android:tint="@color/grey_hex_66"
            android:id="@+id/play_ib_li"
            android:src="@drawable/play"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>