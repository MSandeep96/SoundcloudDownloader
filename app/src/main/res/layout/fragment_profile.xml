<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.sande.soundown.Fragments.Profile">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/civ_fprof"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="2dp"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/userName_tv_fprof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/civ_fprof"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/civ_fprof"
        android:background="@color/colorTransBlack"
        android:padding="5dp"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/ll_ff_fp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/civ_fprof"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/folwer_tv_fprof"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/strokecolor" />

        <TextView
            android:id="@+id/foling_tv_fprof"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/ll_ff_fp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/likescnt_tv_fprof" />

    <TextView
        android:id="@+id/likesplac_tv_fprof"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="80dp"
        android:text="Likes"
        android:textSize="20sp"
        android:layout_below="@+id/ll_ff_fp"
        android:paddingLeft="20dp"
        android:clickable="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <View
        android:id="@+id/view_bl_fp"
        android:layout_below="@+id/likesplac_tv_fprof"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/strokecolor"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/likesplac_tv_fprof"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/playlistcnt_tv_fprof" />

    <TextView
        android:id="@+id/playlistplac_tv_fprof"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="80dp"
        android:text="Playlists"
        android:clickable="true"
        android:textSize="20sp"
        android:layout_below="@+id/likesplac_tv_fprof"
        android:paddingLeft="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <View
        android:layout_below="@+id/playlistplac_tv_fprof"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/strokecolor"/>

    <View
        android:layout_below="@+id/ll_ff_fp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/strokecolor"/>

    <View
        android:layout_above="@+id/ll_ff_fp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/strokecolor"/>
</RelativeLayout>